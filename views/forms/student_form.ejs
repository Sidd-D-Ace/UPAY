<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register Volunteer</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/register-volunteer.css">
  <style>
    .step { display: none; }
    .step.active { display: block; }
    .actions { margin-top: 20px; }
    .btn { padding: 8px 16px; margin: 5px; cursor: pointer; }
  </style>
</head>
<body class="page">
  <header class="site-header">
    <h1 class="title">UPAY Portal</h1>
  </header>

  <main class="container">
    <section class="form-wrap">
      <div class="tab">Register Volunteer</div>

      <form id="volunteerForm" class="card" method="post" action="<%= basePath %>/register-student">
        <!-- Step 1 -->
        <div id="step1" class="step active">
          <div class="grid">
            <input type="hidden" name="role" value="student">
            <div class="field">
              <label for="fullName">Full Name</label>
              <input id="name" name="name" type="text" class="pill" required />
            </div>
            <div class="field">
              <label for="age">Age</label>
              <input id="age" name="age" type="number" class="pill" required />
            </div>
            <div class="field">
              <label for="gender">Gender</label>
              <select id="gender" name="gender" class="pill" required>
                <option value="">-- Select Gender --</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Others">Others</option>
              </select>
            </div>
            <div class="field">
  <label for="branch">Select Branch</label>
  <select id="branch" name="branch" class="pill" required>
    <option value="">-- Select Branch --</option>
    <% branches.forEach(branch => { %>
      <option value="<%= branch.branch_id %>"><%= branch.branch_id %> <%= branch.branch_name %></option>
    <% }) %>
  </select>
</div>
            <div class="field">
              <label for="address">Address</label>
              <input id="address" name="address" type="text" class="pill" required />
            </div>
            <div class="field">
              <label for="education">Education</label>
              <select id="education" name="education" class="pill" required>
                <option value="">-- Select Education --</option>
                <option value="12th Pass">12th Pass</option>
                <option value="Undergraduate">Undergraduate</option>
                <option value="Postgraduate">Postgraduate</option>
              </select>
            </div>
            <div class="field">
              <label for="aadhar">Aadhar Number</label>
              <input id="aadhar" name="aadhar" type="text" class="pill" required />
            </div>
            <div class="field">
              <label for="schoolCollege">School/College</label>
              <input id="school" name="school" type="text" class="pill" required />
            </div>
          </div>

          <div class="actions">
            <button type="submit" class="btn">Submit</button>
          </div>
        </div>

      </form>
    </section>
  </main>
</body>
</html>
